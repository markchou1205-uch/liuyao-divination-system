{
  "version": 2,
  "builds": [
    { "src": "pages/**/*.html", "use": "@vercel/static" },
    { "src": "public/**/*",     "use": "@vercel/static" },
    { "src": "assets/**/*",     "use": "@vercel/static" },
    { "src": "scripts/**/*",    "use": "@vercel/static" },
    { "src": "api/**/*.js",     "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/favicon.ico",    "destination": "/favicon.ico" },
    { "source": "/img/:path*",     "destination": "/img/:path*" },
    { "source": "/assets/:path*",  "destination": "/assets/:path*" },
    { "source": "/scripts/:path*", "destination": "/scripts/:path*" },

    { "source": "/divination",     "destination": "/pages/divination.html" },
    { "source": "/",               "destination": "/pages/index.html" },

    { "source": "/:path*",         "destination": "/pages/index.html" }
  ],
  "headers": [
    {
      "source": "/img/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
