{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js",   "use": "@vercel/node" },
    { "src": "public/**/*",   "use": "@vercel/static" },
    { "src": "pages/**/*",    "use": "@vercel/static" },
    { "src": "assets/**/*",   "use": "@vercel/static" },
    { "src": "scripts/**/*",  "use": "@vercel/static" },
    { "src": "features/**/*", "use": "@vercel/static" },
    { "src": "admin/**/*",    "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/:path*",      "destination": "/api/:path*" },
    { "source": "/assets/:path*",   "destination": "/assets/:path*" },
    { "source": "/scripts/:path*",  "destination": "/scripts/:path*" },
    { "source": "/features/:path*", "destination": "/features/:path*" },
    { "source": "/admin/:path*",    "destination": "/admin/:path*" },
    { "source": "/img/:path*",      "destination": "/img/:path*" },
    { "source": "/divination",      "destination": "/pages/divination.html" },
    { "source": "/admin",           "destination": "/admin/admin.html" },
    { "source": "/:path*",          "destination": "/pages/index.html" }
  ],
  "headers": [
    {
      "source": "/img/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
