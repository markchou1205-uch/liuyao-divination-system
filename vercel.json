{
  "version": 2,
  "builds": [
    { "src": "public/**/*",   "use": "@vercel/static" },
    { "src": "api/**/*.js",   "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/img/:path*",      "destination": "/img/:path*" },
    { "source": "/:path*",          "destination": "/pages/index.html" }
  ],
  "headers": [
    {
      "source": "/img/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
